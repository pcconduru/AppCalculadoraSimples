<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.36" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnEquals"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="6dp"
                android:text="="
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/azulClaro"
                android:onClick="operacaoClick"
                android:text="+"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toTopOf="@+id/btnEquals"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/azulClaro"
                android:onClick="numeroClick"
                android:text="0"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnEquals"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn2"
                app:layout_constraintVertical_bias="0.5" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/azulClaro"
                android:onClick="numeroClick"
                android:text="5"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toTopOf="@+id/btn2"
                app:layout_constraintEnd_toStartOf="@+id/btn6"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn4"
                app:layout_constraintTop_toBottomOf="@+id/btn8"
                app:layout_constraintVertical_bias="0.5" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/azulClaro"
                android:onClick="numeroClick"
                android:text="3"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnAdd"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn2"
                app:layout_constraintTop_toBottomOf="@+id/btn6"
                app:layout_constraintVertical_bias="0.5" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/azulClaro"
                android:onClick="numeroClick"
                android:text="1"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn4"
                app:layout_constraintVertical_bias="0.5" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/azulClaro"
                android:onClick="numeroClick"
                android:text="2"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toTopOf="@+id/btn0"
                app:layout_constraintEnd_toStartOf="@+id/btn3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn1"
                app:layout_constraintTop_toBottomOf="@+id/btn5"
                app:layout_constraintVertical_bias="0.5" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/azulClaro"
                android:onClick="numeroClick"
                android:text="4"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toTopOf="@+id/btn1"
                app:layout_constraintEnd_toStartOf="@+id/btn5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn7"
                app:layout_constraintVertical_bias="0.5" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/azulClaro"
                android:onClick="numeroClick"
                android:text="7"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toTopOf="@+id/btn4"
                app:layout_constraintEnd_toStartOf="@+id/btn8"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/azulClaro"
                android:onClick="numeroClick"
                android:text="8"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toTopOf="@+id/btn5"
                app:layout_constraintEnd_toStartOf="@+id/btn9"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/azulClaro"
                android:onClick="numeroClick"
                android:text="9"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toTopOf="@+id/btn6"
                app:layout_constraintEnd_toStartOf="@+id/btnTimes"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/azulClaro"
                android:onClick="numeroClick"
                android:text="6"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toTopOf="@+id/btn3"
                app:layout_constraintEnd_toStartOf="@+id/btnSubtract"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn5"
                app:layout_constraintTop_toBottomOf="@+id/btn9"
                app:layout_constraintVertical_bias="0.5" />

            <Button
                android:id="@+id/btnSubtract"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:backgroundTint="@color/azulClaro"
                android:onClick="operacaoClick"
                android:text="-"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toTopOf="@+id/btnAdd"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btnTimes"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/azulClaro"
                android:onClick="operacaoClick"
                android:text="x"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toTopOf="@+id/btnSubtract"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/azulClaro"
                android:onClick="operacaoClick"
                android:text="/"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toTopOf="@+id/btnTimes"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/azulClaro"
                android:text="Clear"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toTopOf="@+id/btnDivide"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtCalculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Calcule"
        android:textSize="68sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>